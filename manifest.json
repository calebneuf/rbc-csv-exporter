{
  "manifest_version": 3,
  "name": "RBC CSV Exporter",
  "version": "1.0.0",
  "description": "Export your RBC transactions to CSV format",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "*://*.rbcroyalbank.com/*",
    "*://*.royalbank.com/*",
    "*://*.rbc.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.rbcroyalbank.com/*",
        "*://*.royalbank.com/*",
        "*://*.rbc.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RBC CSV Exporter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
